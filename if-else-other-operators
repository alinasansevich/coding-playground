!#/bin/bash

var='!@#$%'

if [ -z $var4 ] ;
 then
 echo "it's a null string." ;
else
 echo "not null."
fi


if [ -n $var4 ] ;
 then
 echo "I got it." ;
fi

# len(aString)
echo "Finding a string's lenght:"

aString=""
expr length "$aString"

aString="Hello there!"
expr length "$aString"

expr length "A string."

# numeric operators

x=1
y=2

if [ $(($y + $y)) -eq "4" ] ;
 then
 echo "Math works!"
else
 echo "Don't be lukewarm".
fi
